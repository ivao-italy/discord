@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Http.Features
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Mvc.Rendering
@using Microsoft.Extensions.Options

@inject IViewLocalizer Localizer
@inject IUrlHelper Url

	
<a href="@Url.ActionLink("switchto", "localization", new {Id = "it"})" title="Italiano"><img src="~/images/it.svg" alt="Italiano" class="flag" /></a>
<a href="@Url.ActionLink("switchto", "localization", new {Id = "en"})" title="English"><img src="~/images/us.svg" alt="English" class="flag" /></a>
